@model IEnumerable<_3NET_SyncWorld.Models.ApplicationUser>

@{
    ViewBag.Title = "My Friends";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Add a friend", "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>@Html.ActionLink("Remove", "Remove", new { id = item.Id })</td>
    </tr>
}

</table>
