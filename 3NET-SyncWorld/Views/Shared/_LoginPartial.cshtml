@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li><a href="#">Hi @User.Identity.GetUserName() !</a></li>
            <li>@Html.ActionLink("Change password", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Change Password" })</li>
            <li>@Html.ActionLink("My contribute", "Index", "Contribution", routeValues: null, htmlAttributes: new { title = "My Contribute" })</li>
            <li>@Html.ActionLink("Edit Profile", "Edit", "Account", routeValues: null, htmlAttributes: new { title = "Edit Profile" })</li>
            <li>@Html.ActionLink("Friends", "Index", "Friends", routeValues: null, htmlAttributes: new { title = "Friends" })</li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
